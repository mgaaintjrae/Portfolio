{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ encore_entry_link_tags('admin_project') }}
{% endblock %}

{% block title %}Gérer les projets
{% endblock %}

{% block content %}
    <div class="tableau">
        {% if app.user %}
            <a href="{{ path ('logout') }}" class="btn btn--primary ml40">Déconnexion</a>
        {% endif %}

        <h1 class="txtcenter">Gérer les projets</h1>

        {% for message in app.flashes('success') %}
            {# Apparition du flash message #}
            <div class="alert alert--success">{{ message }}</div>
        {% endfor %}

        <div class="grid center">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Nom du projet</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for project in projects %}
                        <tr>
                            <td>{{ project.name }}</td>
                            <td>
                                <a href="{{ path ('project_edit', {id: project.id}) }}" class="btn btn--primary">Editer</a>
                                <form method="post" action="{{ path('project_delete', {id: project.id}) }}" style="display: inline-block" onsubmit="return confirm('Es-tu sûr ?')">
                                    <input name="_method" type="hidden" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id ) }}">
                                    <button class="btn btn--danger">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="txtright">
            <a href="{{ path ('project_add')}}" class="btn btn--primary">Ajouter un projet</a>
        </div>

    </div<>
{% endblock %}
